{
  "name": "restaurant-platform",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "size": "size-limit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "bundle-size": "node scripts/check-bundle-size.js",
    "api-benchmark": "node scripts/api-benchmark.js",
    "security-headers": "node scripts/check-security-headers.js",
    "performance": "node scripts/performance-check.js",
    "smoke": "node scripts/smoke-orders.mjs",
    "warm:cache": "tsx scripts/warm-cache.ts",
    "sim:e2e": "tsx scripts/simulate-e2e.ts"
  },
  "size-limit": [
    {
      "path": "public/widget.js",
      "limit": "40 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/nextjs": "^10.5.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.39.0",
    "@types/pg": "^8.15.5",
    "ai": "^2.2.31",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.540.0",
    "next": "14.0.4",
    "openai": "^4.20.1",
    "pg": "^8.16.3",
    "react": "^18",
    "react-dom": "^18",
    "server-only": "^0.0.1",
    "stripe": "^14.10.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@size-limit/file": "^11.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
